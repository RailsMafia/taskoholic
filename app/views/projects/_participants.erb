<h3>Participants</h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th>User Name</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h4>Add new participant</h4>
<%= form_tag(assign_project_path, method: "patch") do %>
  <%= collection_select(:user, :user_id, User.has_no_project(@project.id), :id, :email) %>
  <%= submit_tag("Assign") %>
<% end %>