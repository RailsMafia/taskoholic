<div class="page-header">
<h1>Your projects <small><%= link_to 'New Project', new_project_path %></small></h1>
</div>

<br>

<% if flash[:notice] -%>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Project Name</th>
      <th>Description</th>
      <th>Manage</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %></td>
        <td><%= project.description %></td>
        <td style="width: 250px">
          <%= link_to edit_project_path(project), class: 'btn btn-default' do %>
          <i class="glyphicon glyphicon-pencil"></i> Edit
          <% end %>
          <%= link_to project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' do %>
          <i class="glyphicon glyphicon-trash"></i> Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


