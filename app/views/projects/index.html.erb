<div class="page-header">
  <h1>Your projects
    <span>
      <%= link_to new_project_path, class: 'btn btn-success' do %>
        <i class="glyphicon glyphicon-plus"></i> New Project
      <% end %>
    </span>
  </h1>
</div>

<br>

<% if flash[:notice] -%>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Project Name</th>
      <th>Description</th>
      <th>Tasks</th>
      <th>Manage</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %></td>
        <td><%= project.description %></td>
        <td><%= link_to '#'+project.tasks.count.to_s, project_tasks_path(project) %></td>
        <td style="width: 250px">
          <%= link_to edit_project_path(project), class: 'btn btn-primary' do %>
          <i class="glyphicon glyphicon-pencil"></i> Edit
          <% end %>
          <%= link_to project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
          <i class="glyphicon glyphicon-trash"></i> Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


