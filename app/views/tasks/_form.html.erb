<%= form_for(@task, html: {method: 'POST'}, url: project_tasks_path) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'Who?' %>
    <%= f.select :user_id, @project.users.map {|u| [ "#{u.name} #{u.email}", u.id]}, {} ,{ class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :due_date %>
    <%= f.date_field :due_date, class: 'form-control' %>
  </div>

  <div class="pull-right">
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>
