<%= form_for(@task, html: {method: 'POST', class: 'clearfix'}, url: project_tasks_path) do |f| %>
  <% if @task.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="text-center"><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h4>
      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'Who?' %>
    <%= f.select :user_id, @project.users.map {|u| [ "#{u.name} #{u.email}", u.id]}, {} ,{ class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :due_date %>
    <%= f.date_field :due_date, class: 'form-control' %>
  </div>

  <div class="pull-right">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>

<% end %>
