<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>

  <% if !flash.empty? -%>
    <%= content_tag :div, flash[:alert], class: 'alert alert-danger' if flash[:alert] %>
  <% end -%>

  <h2 class="form-singin-heading">Sign in</h2>

  <%= f.email_field :email, class: 'form-control', placeholder: 'Your email', autofocus: true %>

  <%= f.password_field :password, class: 'form-control', placeholder: 'Password', autocomplete: "off" %>

  <% if devise_mapping.rememberable? -%>
    <label class="checkbox">
      <%= f.check_box :remember_me %> Remember me
    </label>
  <% end -%>

  <%= button_tag "Sign in", class: 'btn btn-lg btn-primary btn-block' %>

<% end %>

<%= render "devise/shared/links" %>
