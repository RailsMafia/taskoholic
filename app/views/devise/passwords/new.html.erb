<div class="col-md-4 col-md-offset-4">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, role: 'form', class: 'text-center' }) do |f| %>
  <%= devise_error_messages! %>
  <h2>Forgot your password?</h2>
  <br>

  <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: 'Input your email' %>

  <br>

  <%= f.submit "Send me reset password instructions", class: 'btn btn-primary' %>

<% end %>

<br>

<%= render "devise/shared/links" %>
</div>
