
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-signup'}) do |f| %>
  <%= devise_error_messages! %>
  <h2 class="form-singup-heading">Sign up</h2>

  <%= f.text_field :name, class: 'form-control', placeholder: 'Your Name', autofocus: true %>

  <%= f.email_field :email, class: 'form-control', placeholder: 'Your Email' %>

  <%= f.password_field :password, class: 'form-control no-radius', placeholder: 'Password', autocomplete: "off" %>

  <%= f.password_field :password_confirmation,  class: 'form-control', placeholder: 'Confirm Password', autocomplete: "off" %>
  <br>
  <%= button_tag "Signup", class: 'btn btn-lg btn-primary btn-block' %>

<% end %>

<%= render "devise/shared/links" %>
